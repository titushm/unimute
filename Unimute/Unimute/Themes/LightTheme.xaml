<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Global Colours -->
	<SolidColorBrush x:Key="Window.Primary.Background" Color="#ffffff"/>
	<SolidColorBrush x:Key="Text.Foreground" Color="#000000"/>
	<SolidColorBrush x:Key="Text.Secondary.Foreground" Color="#333333"/>

	<!-- Button Colours -->
	<SolidColorBrush x:Key="Button.Background" Color="#f9f9fa"/>
	<SolidColorBrush x:Key="Button.Foreground" Color="#1a1b1e"/>
	<SolidColorBrush x:Key="Button.Border" Color="#8f97a3"/>
	<Thickness x:Key="Button.BorderThickness">1</Thickness>
	<Thickness x:Key="Button.Padding">5,5,5,5</Thickness>
	<FontFamily x:Key="Button.FontFamily">Segoe UI</FontFamily>
	<FontWeight x:Key="Button.FontWeight">Normal</FontWeight>
	<x:Double x:Key="Button.FontSize">14</x:Double>
	<x:Boolean x:Key="Button.UseSystemFocusVisuals">True</x:Boolean>
	<Thickness x:Key="Button.FocusVisualMargin">-3</Thickness>

	<SolidColorBrush x:Key="Button.Background.PointerOver" Color="#e7e8eb"/>
	<SolidColorBrush x:Key="Button.Border.PointerOver" Color="#8f97a3"/>
	<SolidColorBrush x:Key="Button.Foreground.PointerOver" Color="#1a1b1e"/>

	<SolidColorBrush x:Key="Button.Background.Pressed" Color="#efeff1"/>
	<SolidColorBrush x:Key="Button.Border.Pressed" Color="#8f97a3"/>
	<SolidColorBrush x:Key="Button.Foreground.Pressed" Color="#1a1b1e"/>

	<SolidColorBrush x:Key="Button.Background.Disabled" Color="#f0f0f0"/>
	<SolidColorBrush x:Key="Button.Border.Disabled" Color="#8f97a3"/>
	<SolidColorBrush x:Key="Button.Foreground.Disabled" Color="#b0b0b0"/>
	
	<!-- Invert Button Colours -->
	<SolidColorBrush x:Key="Button.Invert.Background" Color="#000000"/>
	<SolidColorBrush x:Key="Button.Invert.Foreground" Color="#dfdfdf"/>
	<SolidColorBrush x:Key="Button.Invert.Border" Color="Transparent"/>
	<Thickness x:Key="Button.Invert.BorderThickness">0</Thickness>
	<Thickness x:Key="Button.Invert.Padding">10,5,10,5</Thickness>
	<FontFamily x:Key="Button.Invert.FontFamily">Segoe UI</FontFamily>
	<FontWeight x:Key="Button.Invert.FontWeight">Normal</FontWeight>
	<x:Double x:Key="Button.Invert.FontSize">14</x:Double>
	<x:Boolean x:Key="Button.Invert.UseSystemFocusVisuals">True</x:Boolean>
	<Thickness x:Key="Button.Invert.FocusVisualMargin">-3</Thickness>

	<SolidColorBrush x:Key="Button.Invert.Background.PointerOver" Color="#333333"/>
	<SolidColorBrush x:Key="Button.Invert.Border.PointerOver" Color="#555555"/>
	<SolidColorBrush x:Key="Button.Invert.Foreground.PointerOver" Color="#ffffff"/>
	
	<SolidColorBrush x:Key="Button.Invert.Background.Pressed" Color="#1a1a1a"/>
	<SolidColorBrush x:Key="Button.Invert.Border.Pressed" Color="#444444"/>
	<SolidColorBrush x:Key="Button.Invert.Foreground.Pressed" Color="#ffffff"/>

	<SolidColorBrush x:Key="Button.Invert.Background.Disabled" Color="#666666"/>
	<SolidColorBrush x:Key="Button.Invert.Border.Disabled" Color="#888888"/>
	<SolidColorBrush x:Key="Button.Invert.Foreground.Disabled" Color="#aaaaaa"/>

	<!-- Warning Button Colours -->
	<SolidColorBrush x:Key="Button.Warning.Background" Color="#FFC107"/>
	<SolidColorBrush x:Key="Button.Warning.Foreground" Color="#000000"/>
	<SolidColorBrush x:Key="Button.Warning.Border" Color="Transparent"/>
	<Thickness x:Key="Button.Warning.BorderThickness">2</Thickness>
	<Thickness x:Key="Button.Warning.Padding">10,5,10,5</Thickness>
	<FontFamily x:Key="Button.Warning.FontFamily">Segoe UI</FontFamily>
	<FontWeight x:Key="Button.Warning.FontWeight">Normal</FontWeight>
	<x:Double x:Key="Button.Warning.FontSize">14</x:Double>
	<x:Boolean x:Key="Button.Warning.UseSystemFocusVisuals">True</x:Boolean>
	<Thickness x:Key="Button.Warning.FocusVisualMargin">-3</Thickness>

	<SolidColorBrush x:Key="Button.Warning.Background.PointerOver" Color="#FFD54F"/>
	<SolidColorBrush x:Key="Button.Warning.Border.PointerOver" Color="Transparent"/>
	<SolidColorBrush x:Key="Button.Warning.Foreground.PointerOver" Color="#000000"/>

	<SolidColorBrush x:Key="Button.Warning.Background.Pressed" Color="#FFB300"/>
	<SolidColorBrush x:Key="Button.Warning.Border.Pressed" Color="Transparent"/>
	<SolidColorBrush x:Key="Button.Warning.Foreground.Pressed" Color="#000000"/>

	<SolidColorBrush x:Key="Button.Warning.Background.Disabled" Color="#FFE082"/>
	<SolidColorBrush x:Key="Button.Warning.Border.Disabled" Color="Transparent"/>
	<SolidColorBrush x:Key="Button.Warning.Foreground.Disabled" Color="#757575"/>

	<!-- Success Button Colours -->
	<SolidColorBrush x:Key="Button.Success.Background" Color="#4CAF50"/>
	<SolidColorBrush x:Key="Button.Success.Foreground" Color="#FFFFFF"/>
	<SolidColorBrush x:Key="Button.Success.Border" Color="Transparent"/>
	<Thickness x:Key="Button.Success.BorderThickness">2</Thickness>
	<Thickness x:Key="Button.Success.Padding">10,5,10,5</Thickness>
	<FontFamily x:Key="Button.Success.FontFamily">Segoe UI</FontFamily>
	<FontWeight x:Key="Button.Success.FontWeight">Normal</FontWeight>
	<x:Double x:Key="Button.Success.FontSize">14</x:Double>
	<x:Boolean x:Key="Button.Success.UseSystemFocusVisuals">True</x:Boolean>
	<Thickness x:Key="Button.Success.FocusVisualMargin">-3</Thickness>

	<SolidColorBrush x:Key="Button.Success.Background.PointerOver" Color="#66BB6A"/>
	<SolidColorBrush x:Key="Button.Success.Border.PointerOver" Color="Transparent"/>
	<SolidColorBrush x:Key="Button.Success.Foreground.PointerOver" Color="#FFFFFF"/>

	<SolidColorBrush x:Key="Button.Success.Background.Pressed" Color="#66BB6A"/>
	<SolidColorBrush x:Key="Button.Success.Border.Pressed" Color="Transparent"/>
	<SolidColorBrush x:Key="Button.Success.Foreground.Pressed" Color="#FFFFFF"/>

	<SolidColorBrush x:Key="Button.Success.Background.Disabled" Color="#B2DFDB"/>
	<SolidColorBrush x:Key="Button.Success.Border.Disabled" Color="Transparent"/>
	<SolidColorBrush x:Key="Button.Success.Foreground.Disabled" Color="#9E9E9E"/>

</ResourceDictionary>
